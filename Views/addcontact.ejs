<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#4CAF50">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Signup - CMS</title>
</head>
<style>
    /* General Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0F3F4;
        color: #333;
        margin: 0;
        padding: 0;
        animation: fadeIn 1s ease-in-out;
    }

    /* Keyframe Animation */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    /* Navbar Styling */
    .navbar-brand {
        font-weight: bold;
        color: #ffffff !important;
    }

    .navbar {
        background: linear-gradient(90deg, #4CAF50, #388E3C);
    }

    .nav-link {
        font-size: 16px;
        color: #ffffff !important;
    }

    .nav-link:hover {
        color: #C8E6C9 !important;
        transition: color 0.3s ease-in-out;
    }

    .btn-outline-light {
        border-color: #ffffff;
        color: #ffffff;
    }

    .btn-outline-light:hover {
        background-color: #81C784;
        color: #fff;
    }

    /* Container Styling */
    .container {
        max-width: 600px;
    }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        animation: slideUp 0.8s ease-out;
    }

    @keyframes slideUp {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    /* Form Label Styling */
    .form-label {
        font-weight: bold;
        color: #4CAF50;
    }

    /* Button Styling */
    .btn-dark {
        background: linear-gradient(90deg, #4CAF50, #388E3C);
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 6px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .btn-dark:hover {
        background: linear-gradient(90deg, #81C784, #4CAF50);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-3px);
    }

    /* Responsive Input Fields */
    .form-control {
        border-radius: 8px;
        border: 1px solid #B0BEC5;
        padding: 12px;
        font-size: 16px;
        transition: box-shadow 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #4CAF50;
        box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
    }
</style>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fa-solid fa-address-book"></i> Contact Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav">
                    <a class="nav-link" href="/addcontact">Add Contact</a>
                    <a class="nav-link" href="/contacts">View Contacts</a>
                    <a class="nav-link btn btn-outline-light ms-auto" href="/logout">Log Out</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Add Contact Form -->
    <div class="container mt-5">
        <h2 class="text-center mb-4" style="color: #4CAF50;">Add Contact</h2>
        <div class="card p-4">
            <form action="/contact" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
                </div>
                <div class="mb-3">
                    <label for="contact" class="form-label">Phone:</label>
                    <input type="number" id="contact" name="contact" class="form-control" placeholder="Enter Phone Number" required>
                </div>
                <button type="submit" class="btn btn-dark w-100">Add Contact</button>
            </form>
        </div>
    </div>
    <script>
        // Check if the service worker is supported by the browser
        if ('serviceWorker' in navigator) {
            // Register the service worker
            navigator.serviceWorker.register('/service-worker.js')
                .then(function(registration) {
                    console.log('Service Worker registered with scope: ', registration.scope);
                })
                .catch(function(error) {
                    console.log('Service Worker registration failed: ', error);
                });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
