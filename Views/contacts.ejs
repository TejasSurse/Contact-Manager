<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#000000">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Contacts</title>
</head>
<style>
    /* General styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to bottom, #ff7eb3, #ff758c);
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Navbar styling */
    .navbar {
        background: #333;
        padding: 1rem;
    }

    .navbar-brand {
        font-weight: bold;
        color: #fff;
        font-size: 1.8rem;
    }

    .navbar-nav .nav-link {
        font-size: 1rem;
        color: #fff;
        transition: all 0.3s ease-in-out;
    }

    .navbar-nav .nav-link:hover {
        color: #ff758c;
        transform: scale(1.1);
    }

    /* Search input styling */
    #searchInput {
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        outline: none;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    #searchInput:focus {
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
        transform: scale(1.05);
    }

    /* Table styling */
    .table {
        background: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        overflow: hidden;
        animation: fadeInUp 1s;
    }

    .table th {
        background-color: #ff758c;
        color: #fff;
        font-size: 1rem;
    }

    .table td, .table th {
        text-align: center;
        vertical-align: middle;
        padding: 15px;
    }

    /* Button animations */
    .btn {
        transition: all 0.3s ease-in-out;
    }

    .btn-outline-dark:hover {
        background-color: #333;
        color: #fff;
        transform: translateY(-2px);
    }

    .btn-outline-danger:hover {
        background-color: #ff758c;
        color: #fff;
        transform: translateY(-2px);
    }

    /* Fade-in animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Search results styling */
    #searchResults {
        display: none;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        padding: 10px;
        animation: fadeInUp 0.5s;
    }

    .contact-result {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .contact-result:last-child {
        border-bottom: none;
    }
</style>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fa-solid fa-address-book"></i> Contact Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav">
                    <a class="nav-link" href="/addcontact">Add Contact</a>
                    <a class="nav-link" href="/contacts">View Contacts</a>
                    <a class="nav-link btn btn-outline-light ms-auto" href="/logout">Log Out</a>
                </div>
                <div class="d-flex ms-auto">
                    <!-- Search Input -->
                    <input id="searchInput" type="text" class="form-control" placeholder="Search Contacts..." oninput="searchContacts()">
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Container for search results -->
    <div id="searchResults" class="mt-3">
        <!-- Results will be populated dynamically here -->
    </div>

    <!-- Contacts Table -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">Contacts List</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.forEach(contact => { %>
                    <tr>
                        <td><%= contact.name %></td>
                        <td><%= contact.contact %> <a href="tel:<%= contact.contact %>"><i class="fa-solid fa-phone"></i></a></td>
                        <td>
                            <a href="/contacts/edit/<%= contact.contact %>" class="btn btn-outline-dark btn-sm">
                                <i class="fa-solid fa-user-pen"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a href="/contacts/delete/<%= contact.contact %>" class="btn btn-outline-danger btn-sm">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function searchContacts() {
            const searchQuery = document.getElementById('searchInput').value;
            if (searchQuery.length >= 3) {
                fetch(`/search?query=${searchQuery}`)
                    .then(response => response.json())
                    .then(data => {
                        const resultsDiv = document.getElementById('searchResults');
                        resultsDiv.innerHTML = "";
                        if (data.length > 0) {
                            resultsDiv.style.display = "block";
                            data.forEach(contact => {
                                const contactDiv = document.createElement('div');
                                contactDiv.classList.add('contact-result');
                                contactDiv.innerHTML = `<p><strong>${contact.name}</strong> - ${contact.contact}</p>`;
                                resultsDiv.appendChild(contactDiv);
                            });
                        } else {
                            resultsDiv.style.display = "none";
                        }
                    })
                    .catch(error => console.error('Error fetching search results:', error));
            } else {
                document.getElementById('searchResults').style.display = "none";
            }
        }

        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/service-worker.js')
                .then(function(registration) {
                    console.log('Service Worker registered with scope: ', registration.scope);
                })
                .catch(function(error) {
                    console.log('Service Worker registration failed: ', error);
                });
        }
    </script>
</body>
</html>
